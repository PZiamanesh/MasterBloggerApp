@page
@using MB.Domain.CommentAgg
@model MB.Presentation.MVC.Areas.Administrator.Pages.CommentManagement.ListModel
@{
}

<div class="card">
    <div class="card-header">
        <h3 class="float-left">Comments List</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover table-responsive-lg">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Article</th>
                    <th>Status</th>
                    <th>CreationDate</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in Model.Comments)
                {
                    <tr>
                        <td>@comment.Id</td>
                        <td>@comment.Name</td>
                        <td>@comment.Email</td>
                        <td>@comment.Message</td>
                        <td>@comment.Article</td>
                        <td>
                            @if (comment.Status == CommentStatus.NewComment)
                            {
                                <i class="fa fa-eye fa-2x text-info"></i>
                            }
                            @if (comment.Status == CommentStatus.Confirmed)
                            {
                                <i class="fa fa-check fa-2x text-success"></i>
                            }
                            @if (comment.Status == CommentStatus.Canceled)
                            {
                                <i class="fa fa-close fa-2x text-danger"></i>
                            }
                        </td>
                        <td>@comment.CreationDate</td>
                        <td>
                            @*@if (comment.Status == CommentStatus.NewComment)
                            {
                                <form class="float-left mr-2" method="post" asp-page-handler="Remove">
                                    <button class="btn btn-danger btn-sm">Remove</button>
                                    <input type="hidden" name="id" value="@comment.Id" />
                                </form>

                                <form class="float-left mr-2" method="post" asp-page-handler="Activate">
                                    <button class="btn btn-success btn-sm">Activate</button>
                                    <input type="hidden" name="id" value="@comment.Id" />
                                </form>
                            }
                            else 
                            {
                                <form class="float-left mr-2" method="post" asp-page-handler="Remove">
                                    <button class="btn btn-danger btn-sm">Remove</button>
                                    <input type="hidden" name="id" value="@comment.Id" />
                                </form>
                            }*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>