@page
@model MB.Presentation.MVC.Areas.Administrator.Pages.ArticleManagement.ListModel
@{
}

<div class="card">
    <div class="card-header">
        <h3 class="float-left">Article List</h3>
        <div class="float-right">
            <a class="btn btn-success" asp-page="./Create" asp-area="Administrator">Add New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover table-responsive-lg">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Article Category</th>
                    <th>Status</th>
                    <th>CreationDate</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model.Articles)
                {
                    <tr>
                        <td>@article.Id</td>
                        <td>@article.Title</td>
                        <td>@article.ArticleCategory</td>
                        <td>
                            @if (article.IsDeleted)
                            {
                                <i class="fa fa-close fa-2x text-danger"></i>
                            }
                            else
                            {
                                <i class="fa fa-check fa-2x text-success"></i>
                            }
                        </td>
                        <td>@article.CreationDate</td>
                        <td>
                            <a class="btn btn-warning btn-sm mr-3" asp-route-id="@article.Id" asp-page="./Edit">Edit</a>
                            @if (article.IsDeleted)
                            {
                                <form class="float-left mr-2" method="post" asp-page-handler="Activate">
                                    <button class="btn btn-success btn-sm">Activate</button>
                                    <input type="hidden" name="id" value="@article.Id"/>
                                </form>
                            }
                            else
                            {
                                <form class="float-left mr-2" method="post" asp-page-handler="Remove">
                                    <button class="btn btn-danger btn-sm">Remove</button>
                                    <input type="hidden" name="id" value="@article.Id"/>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>