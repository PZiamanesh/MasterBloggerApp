@page
@model MB.Presentation.MVC.Pages.ArticleDetailModel
@{
}

<main class="post blog-post col-lg-8">
    <div class="container">
        @if (TempData["CommentSuccess"] != null)
        {
            <div class="row-cols-4">
                <p class="alert alert-success text-black">Thanks! Your comment will be posted after admins approval.</p>
            </div>
        }
        else
        {
            <div class="row-cols-4">
            </div>
        }
        <div class="post-single">
            <div class="post-thumbnail">
                <img src="img/@Model.Article.Image" alt="@Model.Article.Title" class="img-fluid">
            </div>
            <div class="post-details">
                <div class="post-meta d-flex justify-content-between">
                    <div class="category">
                        <a href="#">@Model.Article.CategoryName</a>
                    </div>
                </div>
                <h1>
                    @Model.Article.Title
                    <a href="#">
                        <i class="fa fa-bookmark-o"></i>
                    </a>
                </h1>
                <div class="post-footer d-flex align-items-center flex-column flex-sm-row">
                    <div class="d-flex align-items-center flex-wrap">
                        <div class="date">
                            <i class="icon-clock"></i>@Model.Article.CreationDate
                        </div>
                        <div class="comments meta-last"><i class="icon-comment"></i>12</div>
                    </div>
                </div>
                <div class="post-body">
                    <p class="lead">
                        @Model.Article.Content
                    </p>
                </div>

                <div class="post-comments">
                    <header>
                        <h3 class="h6">Post Comments<span class="no-of-comments">(@Model.Article.CommentsCount)</span></h3>
                    </header>
                    @foreach (var comment in Model.Article.Comments)
                    {
                        <div class="comment">
                            <div class="comment-header d-flex justify-content-between">
                                <div class="user d-flex align-items-center">
                                    <div class="image">
                                        <img src="img/user.svg" alt="..." class="img-fluid rounded-circle">
                                    </div>
                                    <div class="title">
                                        <strong>@comment.Name</strong><span class="date">@comment.CreationDate</span>
                                    </div>
                                </div>
                            </div>
                            <div class="comment-body">
                                <p>
                                    @comment.Message
                                </p>
                            </div>
                        </div>
                    }
                </div>

                <div class="add-comment">
                    <header>
                        <h3 class="h6">Leave a reply</h3>
                    </header>
                    <form method="post">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <input type="text" name="Name" id="username" placeholder="Name" class="form-control">
                            </div>
                            <div class="form-group col-md-6">
                                <input type="email" name="Email" id="useremail" placeholder="Email Address (will not be published)" class="form-control">
                            </div>
                            <div class="form-group col-md-12">
                                <textarea name="Message" id="usercomment" placeholder="Type your comment" class="form-control"></textarea>
                            </div>
                            <div class="form-group col-md-12">
                                <input type="hidden" name="ArticleId" value="@Model.Article.Id"/>
                                <button type="submit" class="btn btn-secondary">Submit Comment</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</main>